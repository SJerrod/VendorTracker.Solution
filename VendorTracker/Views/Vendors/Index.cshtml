@using VendorTracker.Models;

<h1>Current Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>You currently have no Vendors.</h3>
}

@foreach (Vendor vendor in Model)
{
  <h3><a href="/vendors/@vendor.Id">@vendor.Name</a></h3>
}

<p><a href='/vendors/new'>Add a new vendor.</a></p>
<p><a href="/">Navigate back to Home</a></p>
